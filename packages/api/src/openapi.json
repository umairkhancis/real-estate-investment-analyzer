{
  "openapi": "3.0.3",
  "info": {
    "title": "Real Estate Investment Calculator API",
    "description": "REST API for calculating real estate investment metrics including NPV, IRR, DCF, DSCR, and ROIC. Analyze ready properties with mortgages and off-plan properties with developer payment plans.",
    "version": "1.0.0",
    "contact": {
      "name": "Umair Khan",
      "email": "umairkhan.cis@gmail.com"
    },
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    },
    {
      "url": "https://api.real-estate-calc.com",
      "description": "Production server"
    }
  ],
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "description": "Check if the API is running",
        "tags": ["System"],
        "security": [],
        "responses": {
          "200": {
            "description": "API is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "healthy"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "version": {
                      "type": "string",
                      "example": "1.0.0"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api": {
      "get": {
        "summary": "API information",
        "description": "Get information about available endpoints",
        "tags": ["System"],
        "security": [],
        "responses": {
          "200": {
            "description": "API information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "version": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "endpoints": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/calculate/ready": {
      "post": {
        "summary": "Calculate ready property investment",
        "description": "Analyze a ready property with mortgage financing. Returns NPV, IRR, DCF, DSCR, ROIC, and detailed cash flow projections.",
        "tags": ["Calculations"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReadyPropertyInput"
              },
              "examples": {
                "basic": {
                  "summary": "Basic calculation",
                  "value": {
                    "propertySize": 850,
                    "totalValue": 850000,
                    "downPaymentPercent": 25,
                    "registrationFeePercent": 4,
                    "tenure": 25,
                    "discountRate": 4,
                    "rentalROI": 6,
                    "serviceChargesPerSqFt": 10,
                    "exitValue": 1020000
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Calculation successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CalculationResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/InternalError"
          }
        }
      }
    },
    "/api/calculate/offplan": {
      "post": {
        "summary": "Calculate off-plan property investment",
        "description": "Analyze an off-plan property with developer payment plan. Returns NPV, IRR, DCF, ROIC, and payment schedule.",
        "tags": ["Calculations"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OffplanInput"
              },
              "examples": {
                "basic": {
                  "summary": "Basic off-plan calculation",
                  "value": {
                    "size": 500,
                    "totalValue": 500000,
                    "downPaymentPercent": 10,
                    "installmentPercent": 1,
                    "paymentFrequencyMonths": 3,
                    "constructionTenureYears": 3,
                    "handoverPaymentPercent": 10,
                    "expectedValue": 600000,
                    "discountRate": 4
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Calculation successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CalculationResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/InternalError"
          }
        }
      }
    },
    "/api/calculate/offplan-with-mortgage": {
      "post": {
        "summary": "Calculate off-plan with mortgage continuation",
        "description": "Compare two scenarios: exit at handover vs continue with mortgage. Returns complete analysis for both options.",
        "tags": ["Calculations"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["offplanInputs", "mortgageInputs"],
                "properties": {
                  "offplanInputs": {
                    "$ref": "#/components/schemas/OffplanInput"
                  },
                  "mortgageInputs": {
                    "type": "object",
                    "properties": {
                      "tenure": {
                        "type": "number",
                        "description": "Mortgage tenure in years",
                        "example": 25
                      },
                      "rentalROI": {
                        "type": "number",
                        "description": "Expected rental ROI percentage",
                        "example": 6
                      },
                      "serviceChargesPerSqFt": {
                        "type": "number",
                        "description": "Service charges per square foot",
                        "example": 10
                      },
                      "exitValue": {
                        "type": "number",
                        "description": "Expected exit value after mortgage period",
                        "example": 750000
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Calculation successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CalculationResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/InternalError"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key",
        "description": "API key for authentication. Get your API key from the dashboard."
      }
    },
    "schemas": {
      "ReadyPropertyInput": {
        "type": "object",
        "required": ["propertySize", "totalValue"],
        "properties": {
          "propertySize": {
            "type": "number",
            "description": "Property size in square feet",
            "example": 850,
            "minimum": 1
          },
          "totalValue": {
            "type": "number",
            "description": "Total property value in currency",
            "example": 850000,
            "minimum": 1
          },
          "downPaymentPercent": {
            "type": "number",
            "description": "Down payment as percentage (e.g., 25 for 25%)",
            "example": 25,
            "default": 25,
            "minimum": 0,
            "maximum": 100
          },
          "registrationFeePercent": {
            "type": "number",
            "description": "Registration/land department fee as percentage",
            "example": 4,
            "default": 4,
            "minimum": 0,
            "maximum": 100
          },
          "tenure": {
            "type": "number",
            "description": "Loan tenure in years",
            "example": 25,
            "default": 25,
            "minimum": 1,
            "maximum": 50
          },
          "discountRate": {
            "type": "number",
            "description": "Annual discount rate (hurdle rate) as percentage",
            "example": 4,
            "default": 4,
            "minimum": 0
          },
          "rentalROI": {
            "type": "number",
            "description": "Expected rental ROI as percentage",
            "example": 6,
            "default": 6,
            "minimum": 0
          },
          "serviceChargesPerSqFt": {
            "type": "number",
            "description": "Annual service charges per square foot",
            "example": 10,
            "default": 10,
            "minimum": 0
          },
          "exitValue": {
            "type": "number",
            "description": "Expected exit value (sale price). Defaults to 120% of purchase price if not provided",
            "example": 1020000,
            "minimum": 0
          }
        }
      },
      "OffplanInput": {
        "type": "object",
        "required": ["size", "totalValue"],
        "properties": {
          "size": {
            "type": "number",
            "description": "Property size in square feet",
            "example": 500,
            "minimum": 1
          },
          "totalValue": {
            "type": "number",
            "description": "Total property value",
            "example": 500000,
            "minimum": 1
          },
          "downPaymentPercent": {
            "type": "number",
            "description": "Down payment as percentage",
            "example": 10,
            "default": 10,
            "minimum": 0,
            "maximum": 100
          },
          "installmentPercent": {
            "type": "number",
            "description": "Installment payment as percentage of total value",
            "example": 1,
            "default": 1,
            "minimum": 0,
            "maximum": 100
          },
          "paymentFrequencyMonths": {
            "type": "number",
            "description": "Payment frequency in months (1, 3, 6, 12)",
            "example": 3,
            "default": 3,
            "enum": [1, 3, 6, 12]
          },
          "constructionTenureYears": {
            "type": "number",
            "description": "Construction period in years",
            "example": 3,
            "default": 3,
            "minimum": 1,
            "maximum": 10
          },
          "handoverPaymentPercent": {
            "type": "number",
            "description": "Payment due at handover as percentage",
            "example": 10,
            "default": 10,
            "minimum": 0,
            "maximum": 100
          },
          "expectedValue": {
            "type": "number",
            "description": "Expected value at handover. Defaults to 120% of purchase price if not provided",
            "example": 600000,
            "minimum": 0
          },
          "discountRate": {
            "type": "number",
            "description": "Annual discount rate as percentage",
            "example": 4,
            "default": 4,
            "minimum": 0
          }
        }
      },
      "CalculationResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "inputs": {
            "type": "object",
            "description": "Echo of input parameters"
          },
          "results": {
            "type": "object",
            "description": "Calculation results including NPV, IRR, DCF, DSCR, ROIC, cash flows, etc."
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad request - missing or invalid parameters",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "Unauthorized": {
        "description": "Unauthorized - missing or invalid API key",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "Missing API Key",
              "message": "Please provide an API key via X-API-Key header or apiKey query parameter"
            }
          }
        }
      },
      "InternalError": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "System",
      "description": "System endpoints for health checks and API information"
    },
    {
      "name": "Calculations",
      "description": "Real estate investment calculation endpoints"
    }
  ]
}
